# Local configuration for payment-service
HOST=127.0.0.1
PORT=8080

# Payment simulation
# 0-100 probability of failure (default 20)
PAYMENT_FAIL_PROB=20

# Event publishing (RabbitMQ)
PAYMENT_PUBLISH_ENABLED=0
PAYMENT_PUBLISH_STRICT=0
PAYMENT_RABBIT_URL=amqp://guest:guest@localhost:5672/

# Database (RDS Postgres) â€” service-specific user/schema
DB_SCHEMA=payment
DATABASE_URL=postgres://payment_user:password@your-rds-endpoint:5432/bookstore?sslmode=require&options=-c%20search_path%3Dpayment
