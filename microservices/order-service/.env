# Local configuration for order-service
# Server settings
HOST=127.0.0.1
PORT=8000
LOG_LEVEL=info

# Event publishing settings
# Disable publishing locally since RabbitMQ isn't available
ORDER_PUBLISH_ENABLED=0
ORDER_PUBLISH_STRICT=0

# RabbitMQ connection (unused when ORDER_PUBLISH_ENABLED=0)
RABBIT_URL=amqp://guest:guest@localhost:5672/%2f
ORDERS_EXCHANGE=orders

# Database (RDS Postgres)
DATABASE_URL=postgres://username:password@your-rds-endpoint:5432/bookstore?sslmode=require
